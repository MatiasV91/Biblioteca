@model Biblioteca.Models.Borrowing

@{
    ViewData["Title"] = "View";
}



<h4>Borrow</h4>
<hr />
<dt class="col-sm-2">
    Member
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.Member.FirstName)  @Html.DisplayFor(model => model.Member.LastName)
</dd>
<dt class="col-sm-2">
    Book
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.Book.Title)
</dd>
<div class="row">

    <div class="col-md-4">

        <form asp-action="Borrow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Days Borrowed</label>
                <input asp-for="AmountOfDays" class="form-control" />
                <span asp-validation-for="AmountOfDays" class="text-danger"></span>
            </div>
            @Html.HiddenFor(m => m.BookId)
            @Html.HiddenFor(m => m.MemberId)
            <br />
            <div class="form-group">
                <input type="submit" value="Borrow" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.MemberId" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
