@model Biblioteca.Models.Borrowing

@{
    ViewData["Title"] = "Return";
}

<div>
    <h1>Return Book</h1>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.FirstName) @Html.DisplayFor(model => model.Member.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateBorrowed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateBorrowed)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AmountOfDays)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountOfDays)
        </dd>
        <dt class="col-sm-2">
            Current Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateReturned)
        </dd>
        <dt class="col-sm-2">
            Fine
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.FinePay)
        </dd>
        <form asp-action="Return">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AmountOfDays" />
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" asp-for="MemberId" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateBorrowed" />
            <input type="hidden" asp-for="DateReturned" />
            <input type="hidden" asp-for="FinePay" />
            <div class="form-group">
                <input type="submit" value="Return" class="btn btn-primary" />
            </div>
        </form>


    </dl>
</div>
<div>
    <a asp-action="Details" asp-controller="ManageMembers" asp-route-id="@Model.MemberId" class="btn btn-secondary">Back to List</a>
</div>
